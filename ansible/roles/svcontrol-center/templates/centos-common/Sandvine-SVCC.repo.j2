[sandvine-svcontrol-center]
name=Sandvine - SVCC (Sandvine Control Center)
{% if (release == 'dev' and ansible_os_family == "RedHat" and ansible_distribution_major_version == "6") %}
baseurl=ftp://{{ sandvine_yum_host }}/images/Linux/RHEL6-x64/CONTROL_CENTER/svcontrol-center-{{ cc_version }}
{% endif %}
{% if (release == 'dev' and ansible_os_family == "RedHat" and ansible_distribution_major_version == "7") %}
baseurl=ftp://{{ sandvine_yum_host }}/images/Linux/RHEL7-x64/CONTROL_CENTER/svcontrol-center-{{ cc_version }}
{% endif %}
enabled=1
protect=0
gpgcheck=0
sslverify=0
