<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE diameter-peer SYSTEM "diam_peer_config.dtd">
<diameter-peer>
    <peers>
        <peer>
            <identity>pts</identity>
{% if pts_srvc_ip is defined %}
            <hostname>{{ pts_srvc_ip }}</hostname>
{% else %}
            <hostname>{{ hostvars[groups['svpts-servers'][0]]['ansible_eth1']['ipv4']['address'] }}</hostname>
{% endif %}
            <realm>sandvine.com</realm>
            <dictionaries>
                <dictionary>CS</dictionary>
                <dictionary>Rf</dictionary>
            </dictionaries>
            <security>
                <ca-file>CApath</ca-file>
                <cert-file>CERTpath</cert-file>
                <key-file>KEYpath</key-file>
            </security>
            <reachable-realms>
                <realm>sandvine.com</realm>
            </reachable-realms>
        </peer>
         <peer>
            <identity>cs</identity>
{% if sde_srvc_ip is defined %}
            <hostname>{{ sde_srvc_ip }}</hostname>
{% else %}
            <hostname>{{ hostvars[groups['svsde-servers'][0]]['ansible_eth1']['ipv4']['address'] }}</hostname>
{% endif %}
            <realm>sandvine.com</realm>
            <port>3869</port>
            <bias>2</bias>
            <dictionaries>
                <dictionary>CS</dictionary>
            </dictionaries>
            <security>
                <ca-file>CApath</ca-file>
                <cert-file>CERTpath</cert-file>
                <key-file>KEYpath</key-file>
            </security>
            <reachable-realms>
                <realm>sandvine.com</realm>
            </reachable-realms>
        </peer>
    </peers>
    <identities>
        <local-identity>
            <identity>sde</identity>
            <display-name>sde</display-name>
            <realm>sandvine.com</realm>
            <dictionaries>
                <dictionary>CS</dictionary>
                <dictionary>Rf</dictionary>
            </dictionaries>
            <security>
                <ca-file>CApath</ca-file>
                <cert-file>CERTpath</cert-file>
                <key-file>KEYpath</key-file>
            </security>
            <server-config>
{% if sde_srvc_ip is defined %}
                <ip>{{ sde_srvc_ip }}</ip>
{% else %}
                <ip>{{ hostvars[groups['svsde-servers'][0]]['ansible_eth1']['ipv4']['address'] }}</ip>
{% endif %}
                <port>3868</port>
                <watchdog-timeout>20</watchdog-timeout>
                <cer-timeout>10</cer-timeout>
                <accept>
                </accept>
            </server-config>
        </local-identity>
        <local-identity>
            <identity>sde</identity>
            <display-name>sde</display-name>
            <realm>sandvine.com</realm>
            <dictionaries>
                <dictionary>CS</dictionary>
            </dictionaries>
            <security>
                <ca-file>CApath</ca-file>
                <cert-file>CERTpath</cert-file>
                <key-file>KEYpath</key-file>
            </security>
            <client-config>
                <watchdog-timeout>10</watchdog-timeout>
                <cea-timeout>5</cea-timeout>
                <connection-timeout>1</connection-timeout>
                <connect>
                    <remote-peer>cs</remote-peer>
                </connect>
            </client-config>
        </local-identity>
    </identities>
</diameter-peer>
