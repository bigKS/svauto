[sandvine-svnda]
name=Sandvine - SVNDA (Sandvine Traffic Steering Engine)
{% if (release == 'dev' and static_repo != 'true' and versioned_repo != 'true') %}
baseurl=ftp://{{ packages_server }}/centos/{{ release_code_name }}/$releasever/svrepos/$basearch/svnda
{% endif %}
{% if (release == 'dev' and static_repo != 'true' and versioned_repo == 'true') %}
baseurl=ftp://{{ packages_server }}/centos/{{ release_code_name }}/$releasever/svrepos/$basearch/svnda-{{ svnda_version }}
{% endif %}
{% if (release == 'dev' and static_repo == 'true' and versioned_repo == 'true' and base_os == 'centos6') %}
baseurl=ftp://{{ static_packages_server }}/images/Linux/CENTOS6-x64/NA/svnda-LNX-{{ svnda_version }}
{% endif %}
{% if (release == 'dev' and static_repo == 'true' and versioned_repo == 'true' and base_os == 'centos7') %}
baseurl=ftp://{{ static_packages_server }}/images/Linux/RHEL7-x64/NA/svnda-LNX-{{ svnda_version }}
{% endif %}
enabled=1
protect=0
gpgcheck=0
sslverify=0
